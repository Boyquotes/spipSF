{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_rubrique_show' %}

{% block main %}
    <h1>{{ post.titre }}</h1>

    {{ post.maj|date }}
    {{ post.statut }}
    {{ post.descriptif }}
    {{ post.texte }}

{% endblock %}

{% block sidebar %}
    <div class="section">
        <a href="{{ path('admin_rubrique_edit', {id: post.idRubrique}) }}" class="btn btn-lg btn-block btn-success">
            <i class="fa fa-edit" aria-hidden="true"></i> {{ 'action.edit_contents'|trans }}
        </a>
    </div>

    <div class="section">
        {{ include('admin/rubrique/_delete_form.html.twig', {post: post}, with_context = false) }}
    </div>

    {{ parent() }}

    {{ show_source_code(_self) }}
{% endblock %}
